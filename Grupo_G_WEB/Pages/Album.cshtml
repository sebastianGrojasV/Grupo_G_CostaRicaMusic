@page "/album/{id:int}"
@model AlbumModel
@{
    ViewData["Title"] = "Álbum";
}

<section class="route-card">
    <h2>Álbum</h2>

    @if (Model.Album is null)
    {
        <p>Álbum no encontrado.</p>
    }
    else
    {
        <h3>@Model.Album.Nombre</h3>
        <p class="small-note">Año: @(Model.Album.Anio?.ToString() ?? "—")</p>
    }
</section>
