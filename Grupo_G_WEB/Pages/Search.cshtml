@page "/search"
@model SearchModel
@{
    ViewData["Title"] = "Buscar";
}

<section class="route-card">
    <h2>Buscar</h2>
    <p class="small-note">Resultados agrupados por canciones, artistas y álbumes.</p>

    <h3>Canciones</h3>
    <ul>
        @foreach (var song in Model.Canciones)
        {
            <li>@song.NombreCancion — @song.NombreArtista</li>
        }
    </ul>

    <h3>Artistas</h3>
    <ul>
        @foreach (var artist in Model.Artistas)
        {
            <li><a asp-page="/Artist" asp-route-id="@artist.Id">@artist.Nombre</a></li>
        }
    </ul>

    <h3>Álbumes</h3>
    <ul>
        @foreach (var album in Model.Albumes)
        {
            <li><a asp-page="/Album" asp-route-id="@album.Id">@album.Nombre</a></li>
        }
    </ul>
</section>
