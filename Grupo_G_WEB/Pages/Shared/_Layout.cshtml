<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Costa Rica Music</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Grupo_G_WEB.styles.css" asp-append-version="true" />
</head>
<body>
    @{ var currentQuery = Context.Request.Query["q"].ToString(); }
    <div class="app-shell">
        <aside class="app-sidebar">
            <a class="brand" asp-page="/Index">Costa Rica Music</a>
            <nav class="app-nav" aria-label="Navegación principal">
                <a asp-page="/Index">Inicio</a>
                <a asp-page="/Search">Buscar</a>
                <a asp-page="/Playlist" asp-route-id="1">Playlist</a>
                <a asp-page="/Artist" asp-route-id="1">Artista</a>
                <a asp-page="/Album" asp-route-id="1">Álbum</a>
            </nav>
        </aside>

        <div class="app-main-area">
            <header class="app-topbar">
                <form method="get" asp-page="/Search" class="top-search" role="search">
                    <input type="search" name="q" value="@currentQuery" placeholder="Buscar canciones, artistas o álbumes" />
                    <button type="submit">Buscar</button>
                </form>
            </header>

            <main class="app-content" role="main">
                @RenderBody()
            </main>
        </div>

        <aside class="app-right-panel">
            <h3>Panel</h3>
            <p>Reservado para "Ahora sonando" y cola extendida.</p>
        </aside>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
